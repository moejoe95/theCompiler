    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug",
            "type": "lldb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/builddir/mc_ast_to_dot",
            "preLaunchTask": "ninja build"
        },
        {
            "name": "run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/mc_ast_to_dot",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "ninja build"
        },
        {
            "name": "run with xdot",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/mc_ast_to_dot",
            "args": [
                "|",
                "xdot",
                "-"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "ninja build"
        }
    ]
}